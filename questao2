#include <stdio.h>
#include <math.h>

int main (){

 float num1, num2, resultado;

 printf("Digite um número: ");
 scanf("%f", &num1);printf("\n");
 printf("Digite outro número: ");
 scanf("%f", &num2);printf("\n");
 printf("%3.2f + %3.2f = %3.2f",num1, num2, resultado = num1 + num2 );
 printf("\n\n\n");
 printf("%3.2f² + %3.2f² = %3.2f",num1, num2, resultado = pow(num1,2) + pow(num2,2));

return 0;

}

